{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Default build
        {
            "label": "build",
            "dependsOn" : [
                "compile MT4",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile MT4",
            "type": "shell",
            "command": "del ${workspaceRoot}\\dv_tests.log & ${workspaceRoot}\\metaeditor.exe /compile:${workspaceRoot}\\dv_tests.mq4 /s /log & type ${workspaceRoot}\\dv_tests.log",
        },
        {
            "label": "compile MT5",
            "type": "shell",
            "command": "del ${workspaceRoot}\\dv_tests.log & \"C:\\Program Files\\MetaTrader\\metaeditor64.exe\" /compile:${workspaceRoot}\\dv_tests.mq4 /s /log & type ${workspaceRoot}\\dv_tests.log",
        },
    ]
}